<script>

if(window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches){
    document.getElementById('botonDark').style.backgroundImage = "url('moon.svg')";
    document.documentElement.classList.toggle('dark');
} else {
    document.getElementById('botonDark').style.backgroundImage = "url('sun.svg')";
}

document.getElementById('botonDark').addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');
    if(document.documentElement.classList.contains('dark')){
        document.getElementById('botonDark').style.backgroundImage = "url('moon.svg')";
    } else {
        document.getElementById('botonDark').style.backgroundImage = "url('sun.svg')";
    }
});



</script>