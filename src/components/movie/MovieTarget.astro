---

interface Props {
	title: string;
    date: string;
    poster_path: string;
    adult: string;
    id: string;
}

const { title, date, poster_path, adult, id } = Astro.props;


---

<div
class={ "grid grid-rows-2 rounded-xl w-48 tarjeta" }
>
    <a href=`/movie/id/${id}` class={ (poster_path) ? `grid` : `grid content-center bg-[#172d69] rounded-xl` }>
        <img src={ (poster_path) ? `https://image.tmdb.org/t/p/w300/${poster_path}` : "https://www.themoviedb.org/assets/2/v4/glyphicons/basic/glyphicons-basic-38-picture-grey-c2ebdbb057f2a7614185931650f8cee23fa137b93812ccb132b9df511df1cfac.svg" } alt={title} class={ "rounded-xl" }>
        
    </a>

    <div class={ "flex flex-col px-2 py-3" }>
        <a href="" class="w-full h-fit text-lg">
            {title}
        </a>
        <p class="h-fit flex justify-between text-sm">
            <span class="text-white/50 font-semibold">
                {date}
            </span>
            <span>
                { (adult) ? "ðŸ”ž" : ""}
            </span>

        </p>
    </div>

    
</div>
    
<style>
    .tarjeta {
        background-color: #061b55;
        display: grid;
        grid-template-rows: 281px auto;
    }
    

</style>
