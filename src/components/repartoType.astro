---
interface Props {
  id: string;
  poster_path: string;
  title: string;
  type: string;
}

const { id, title, poster_path, type } = Astro.props;
---

<div
  class="snap-center shrink-0 overflow-hidden shadow-lg rounded-xl bg-blue-800/45 object-cover w-1/2 sm:w-4/12 md:w-1/4 lg:w-1/5">
  <a href={`/${type}/id/${id}`} class="h-full gridA">
    <img
      src={poster_path
        ? `https://image.tmdb.org/t/p/w300/${poster_path}`
        : "https://www.themoviedb.org/assets/2/v4/glyphicons/basic/glyphicons-basic-38-picture-grey-c2ebdbb057f2a7614185931650f8cee23fa137b93812ccb132b9df511df1cfac.svg"}
      alt={title}
      class="h-full"
    />
    <p class="px-5 py-2 text-center dark:text-white font-medium">{title}</p>
  </a>
</div>

<style>
  .gridA {
    display: grid;
    grid-template-rows: 1fr auto auto;
  }
</style>
